CREATE TABLE app.CUSTOMER (
  ID VARCHAR(100) PRIMARY KEY,
  NAME VARCHAR(120),
  DOB DATE NOT NULL,
  CREATETS TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  UPDATETS TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP
  );
  


  
CREATE TABLE app.QUERY (
  ID VARCHAR(100) PRIMARY KEY,
  QUERYTYPE VARCHAR(120),
  CUST_ID VARCHAR(100) NOT NULL REFERENCES app.CUSTOMER(ID),
  DESCRIPTION VARCHAR(250),
  CREATETS TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  UPDATETS TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP
  );
  
  CREATE TABLE app.CUSTOMER_PROPERTIES (
  id INTEGER PRIMARY KEY GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
  CUST_ID VARCHAR(100) NOT NULL REFERENCES app.CUSTOMER(id),
  NAME VARCHAR (120),
  VALUE VARCHAR (250)
  
  )
  
  CREATE TABLE app.QUERY_PROPERTIES (
  id INTEGER PRIMARY KEY GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1),
  QUERY_ID VARCHAR(100) NOT NULL REFERENCES app.QUERY(id),
  NAME VARCHAR (120),
  VALUE VARCHAR (250)
  
  )